# Environment
ASPNETCORE_ENVIRONMENT=Production

# Database
DB_ROOT_PASSWORD=YourStrongRootPassword123
DB_PASSWORD=YourPassword123!

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production-min-32-characters
JWT_ISSUER=IngredientServer
JWT_AUDIENCE=IngredientServerApp
JWT_EXPIRATION_MINUTES=1440

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-endpoint.services.ai.azure.com/models
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_MODEL=gpt-4.1
AZURE_OPENAI_MAX_TOKENS=2000
AZURE_OPENAI_TIMEOUT_MINUTES=2
AZURE_OPENAI_TEMPERATURE=0.7
AZURE_OPENAI_IMAGE_ANALYSIS_TEMPERATURE=0.3
AZURE_OPENAI_FREQUENCY_PENALTY=0.1
AZURE_OPENAI_PRESENCE_PENALTY=0.1
AZURE_OPENAI_MAX_CONCURRENT_REQUESTS=10

# OpenAI Configuration (optional)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo

# File Upload Configuration
FILE_UPLOAD_MAX_FILE_SIZE=10485760
FILE_UPLOAD_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp
